{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "csla_mcp.Server": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },
  "Csla": {
    "DataPortal": {
      "DefaultTimeout": 30000,
      "MaxRetries": 3
    },
    "Security": {
      "Provider": "Windows"
    }
  },
  "CodeExamples": {
    "RefreshInterval": "00:05:00",
    "EnableCaching": true,
    "MaxCacheSize": 100
  }
}