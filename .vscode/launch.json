{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Aspire AppHost",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/csla-mcp.AppHost/bin/Debug/net9.0/csla-mcp.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/csla-mcp.AppHost",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "preLaunchTask": "build"
    },
    {
      "name": "Launch MCP Server",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/csla-mcp.Server/bin/Debug/net9.0/csla-mcp.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/csla-mcp.Server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "preLaunchTask": "build"
    }
  ]
}